@using FinancialTracker.Web.Models
@using FinancialTracker.Web.Services
@inject FinancialService FinancialService

@if (IsVisible)
{
    <div class="create-group-overlay" @onclick="Close">
        <div class="create-group-modal" @onclick:stopPropagation>
            <div class="modal-header">
                <h3>Створити групу</h3>
                <span class="cancel-link" @onclick="Close">Скасувати</span>
            </div>

            <div class="modal-body">
                <label>Назва групи</label>
                <input type="text" @bind="groupName" placeholder="Введіть назву групи" />

                <label>Оберіть валюту</label>
                <select class="currency-select" @bind="baseCurrency">
                    <option value="UAH">₴ Українська гривня</option>
                    <option value="USD">$ Долар США</option>
                    <option value="EUR">€ Євро</option>
                </select>

                <label>Загальний ліміт</label>
                <div class="limit-input-container">
                    <input type="number"
                           @bind="totalLimit"
                           placeholder="Введіть ліміт "
                           class="limit-input" />
                </div>

                <div class="invite-section">
                    <label>Запросити учасників</label>
                    <span class="mail-icon">✉</span>
                </div>

                <div class="email-input-container">
                    <input type="email"
                           @bind="newEmail"
                           @bind:event="oninput"
                           @onkeypress="HandleEmailKeyPress"
                           placeholder="Введіть email учасника" />
                </div>

                <div class="email-tags">
                    @foreach (var email in participants.ToList())
                    {
                        <div class="email-tag">
                            <span>@email</span>
                            <span class="remove-tag" @onclick="() => RemoveParticipant(email)">×</span>
                        </div>
                    }
                </div>

                <div class="copy-link">
                    <span>🔗 Скопіювати посилання для запрошення</span>
                </div>

                @if (!string.IsNullOrEmpty(successMessage))
                {
                    <div class="success-message" style="color: #2ecc71; background: rgba(46, 204, 113, 0.1); padding: 10px; border-radius: 8px; margin-bottom: 15px; font-size: 0.9rem; border: 1px solid #2ecc71; text-align: center;">
                        ✅ @successMessage
                    </div>
                }

                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="error-message" style="color: #ff4444; background: rgba(255, 68, 68, 0.1); padding: 10px; border-radius: 8px; margin-bottom: 15px; font-size: 0.9rem; border: 1px solid #ff4444; text-align: center;">
                        ⚠️ @errorMessage
                    </div>
                }

                <button class="btn-create" @onclick="CreateNewGroup">Створити</button>
            </div>
        </div>
    </div>
}


@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }
    [Parameter] public EventCallback<GroupDto> OnCreated { get; set; }

    private string groupName = "";
    private string baseCurrency = "UAH";
    private decimal totalLimit = 0;
    private List<string> participants = new();
    private string newEmail = "";
    private string? errorMessage;
    private string? successMessage;

    private void HandleEmailKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter") AddParticipant();
    }

    private void AddParticipant()
    {
        errorMessage = null;

        if (string.IsNullOrWhiteSpace(newEmail)) return;

        var email = newEmail.Trim();

        if (participants.Contains(email))
        {
            errorMessage = "Цей учасник вже доданий до списку.";
            return;
        }

        if (email.Contains("@"))
        {
            participants.Add(email);
            newEmail = "";
        }
        else
        {
            errorMessage = "Будь ласка, введіть коректний email.";
        }
    }

    private void RemoveParticipant(string email)
    {
        errorMessage = null;
        participants.Remove(email);
    }

    private async Task CreateNewGroup()
    {
        if (string.IsNullOrWhiteSpace(groupName))
        {
            errorMessage = "Назва групи обов'язкова.";
            return;
        }

        if (!string.IsNullOrWhiteSpace(newEmail)) AddParticipant();

        errorMessage = null;
        successMessage = null;

        try
        {
            var groupToCreate = new GroupDto
                {
                    Name = groupName,
                    BaseCurrency = baseCurrency,
                    TotalLimit = totalLimit
                };

            var createdGroup = await FinancialService.CreateGroupAsync(groupToCreate);

            if (createdGroup != null && !string.IsNullOrEmpty(createdGroup.Id))
            {
                var participantsToInvite = participants.ToList();
                int successCount = 0;
                bool hasError = false;

                foreach (var email in participantsToInvite)
                {
                    try
                    {
                        var inviteRequest = new InviteUserRequest
                            {
                                GroupId = Guid.Parse(createdGroup.Id),
                                Email = email
                            };
                        await FinancialService.SendInvitationAsync(inviteRequest);

                        participants.Remove(email);
                        successCount++;
                    }
                    catch (Exception ex)
                    {
                        hasError = true;
                        participants.Remove(email);
                        errorMessage = ex.Message;
                    }
                }

                if (successCount > 0)
                {
                    successMessage = successCount == 1
                        ? "Запрошення успішно надіслано!"
                        : $"Групу створено та надіслано запрошень: {successCount}";
                }
                else if (!hasError)
                {
                    successMessage = "Групу успішно створено!";
                }

                await OnCreated.InvokeAsync(createdGroup);
                StateHasChanged();

                if (!hasError)
                {
                    await Task.Delay(2000);
                    await Close();
                }
                else
                {
                    StateHasChanged();
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Помилка при створенні: " + ex.Message;
            StateHasChanged();
        }
    }

    private void CloseFields()
    {
        groupName = "";
        totalLimit = 0;
        participants.Clear();
        newEmail = "";
        errorMessage = null;
        successMessage = null;
    }

    private async Task Close()
    {
        CloseFields();
        await OnClose.InvokeAsync();
    }
}