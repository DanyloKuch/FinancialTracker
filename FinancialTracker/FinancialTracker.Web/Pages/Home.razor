        position: relative;
        display: inline-block;
    }

    .wallet-select {
        background: rgba(255, 255, 255, 0.1);
        color: white;
        padding: 8px 16px;
        border-radius: 8px;
        cursor: pointer;
        font-size: 14px;
        border: 1px solid #444;
    }

    .wallet-menu-popup {
        position: absolute;
        top: 45px;
        right: 0;
        width: 240px;
        background: #1e1e1e;
        border: 1px solid #333;
