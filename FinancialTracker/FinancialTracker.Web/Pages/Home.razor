        background-color: white; 
        border-color: white; 
    }

    .wallet-name {
        color: #888;
        transition: color 0.2s;
    }

    .radio-container input:checked ~ .wallet-name {
        color: white; 
    }

    .edit-pen {
        color: #555;
        cursor: pointer;
        transition: color 0.2s;
    }

        .edit-pen:hover {
            color: white;
        }

    .btn-add-new {
        width: 100%;
        background: #2a2a2a;
        border: 1px solid #3a3a3a;
        color: #ddd;
        padding: 10px;
        border-radius: 8px;
        margin-top: 8px;
        cursor: pointer;
        font-size: 13px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
    }

        .btn-add-new:hover {
            background: #333;
            color: white;
        }

    .modal-backdrop {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
