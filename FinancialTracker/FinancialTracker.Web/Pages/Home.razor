@page "/"
@using Microsoft.AspNetCore.Authorization
@using FinancialTracker.Web.Models
@using FinancialTracker.Web.Services
@attribute [Authorize]
@inject FinancialService FinancialService
@inject NavigationManager Nav
@inject NavigationManager Navigation
<PageTitle>Головна - Financial Tracker</PageTitle>

<div class="dashboard-wrapper">
    <header class="top-bar">
        <div class="user-profile">
            <div class="user-avatar">👤</div>
        </div>
        <div class="currency-rates">
            @if (exchangeRates != null && exchangeRates.Any())
            {
                @foreach (var rate in exchangeRates)
                {
                    <div class="rate-card">
                        <span class="rate-flag">@(rate.Code == "USD" ? "🇺🇸" : rate.Code == "EUR" ? "🇪🇺" : "🏳️")</span>
                        <div class="rate-info">
                            <span class="rate-code">@rate.Code</span>
                            <span class="rate-value">@rate.Rate.ToString("F2")</span>
                        </div>
                        <div class="rate-trend">
                            <span class="rate-update">@rate.UpdatedAt.ToString("HH:mm")</span>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="rate-loading">Завантаження курсів...</div>
            }
        </div>
        <div class="wallet-container">
            <div class="wallet-select" @onclick="ToggleDropdown">
                @(selectedWallet?.Name ?? "Основний") ▼
            </div>

            @if (isDropdownOpen)
            {
                <div class="wallet-menu-popup">
                    <div class="menu-title">Гаманець і валюта</div>

                    <div class="wallet-list">
                        <div class="wallet-option">
                            <label class="radio-container">
                                <input type="radio" name="wallet"
                                       checked="@(selectedWallet?.Id == Guid.Empty)"
                                       @onchange="() => SelectWallet(totalWallet)" />
                                <span class="custom-radio"></span> <span class="wallet-name">Основний</span>
                            </label>
                        </div>

                        @foreach (var wallet in wallets)
                        {
                            <div class="wallet-option">
                                <label class="radio-container">
                                    <input type="radio" name="wallet"
                                           checked="@(selectedWallet?.Id == wallet.Id)"
                                           @onchange="() => SelectWallet(wallet)" />
                                    <span class="custom-radio"></span> <span class="wallet-name">
                                        @wallet.Name @(wallet.CurrencyCode == "USD" ? "$" : wallet.CurrencyCode == "EUR" ? "€" : "₴")
                                    </span>
                                </label>
                                <span class="edit-pen" @onclick="() => OpenEditModal(wallet)">✎</span>
                            </div>
                        }
                    </div>

                    <button class="btn-add-new" @onclick="OpenCreateModal" @onclick:stopPropagation>
                        <span class="plus-icon">+</span> Новий гаманець
                    </button>
                </div>
            }
        </div>
    </header>

    <div class="dashboard-content">
        <div class="balance-section">
            <span class="label">Поточний баланс</span>
            <h1 class="balance-amount">
                @totalWalletBalance.ToString("N2") @GetCurrencySymbol()
            </h1>
        </div>

        <div class="cards-row">
            <div class="action-card expense-card">
                <div class="card-top">
                    <button class="add-btn" @onclick='() => Nav.NavigateTo("/add-transaction/1")'>📅 + Додати</button>
                </div>
                <div class="card-bottom">
                    <span>Витрати</span>
                    <h3>@expenseSum.ToString("N2") @GetCurrencySymbol()</h3>
                </div>
            </div>

            <div class="action-card income-card">
                <div class="card-top">
                    <button class="add-btn" @onclick='() => Nav.NavigateTo("/add-transaction/0")'>📅 + Додати</button>
                </div>
                <div class="card-bottom">
                    <span>Дохід</span>
                    <h3>@incomeSum.ToString("N2") @GetCurrencySymbol()</h3>
                </div>
            </div>
        </div>

        <div class="main-grid">
            <div class="grid-col">
                <div class="header-inline">
                    <h3>Активні ліміти</h3>
                    <span class="edit-pen-main" @onclick='() => Navigation.NavigateTo("/limits-setup")'>✎</span>
                </div>

                <div class="panel dark-panel">
                    @if (categories != null && categories.Any())
                    {
                        @foreach (var cat in categories.Where(c => c.TotalLimit > 0))
                        {
                            var limit = cat.TotalLimit;
                            var spent = cat.SpentAmount;
                            var rawPercent = limit > 0 ? (double)spent / (double)limit * 100 : 0;
                            var displayPercent = rawPercent > 100 ? 100 : rawPercent;
                            string colorClass = rawPercent > 90 ? "red" : (rawPercent > 70 ? "orange" : "green");
                            <div class="limit-row">
                                <div class="limit-header">
                                    <span>@cat.Name</span>
                                </div>
                                <div class="progress-track">
                                    <div class="progress-fill @colorClass"
                                         style="width: @displayPercent.ToString("F0", System.Globalization.CultureInfo.InvariantCulture)%">
                                    </div>
                                </div>
                                <div class="limit-stats">
                                    Витрачено: @spent.ToString("N0") / @limit.ToString("N0") ₴
                                </div>
                            </div>
                        }
                    }
                    else if (categories == null)
                    {
                        <p class="loading-text">Завантаження даних...</p>
                    }
                    else
                    {
                        <p class="loading-text">Ліміти не встановлені. Натисніть ✎ щоб налаштувати.</p>
                    }
                </div>
            </div>

            <div class="grid-col">
                <div class="section-header" @onclick='() => Nav.NavigateTo("/transactions")' style="cursor: pointer;">
                    <h3>Останні транзакції</h3>
                    <div class="view-all-action">
                        <span>Всі (@filteredTransactionsCount)</span>
                        <span class="arrow-icon">→</span>
                    </div>
                </div>

                <div class="transactions-list">
                    @if (recentTransactions.Any())
                    {
                        @foreach (var tx in recentTransactions)
                        {
                            bool isIncome = tx.Type == 0;
                            string sign = isIncome ? "+" : "-";
                            string colorClass = isIncome ? "text-green" : "text-white";
                            string icon = isIncome ? "💰" : "🛒";

                            <div class="trans-item">
                                <div class="trans-icon-circle">@icon</div>
                                <div class="trans-details">
                                    <div class="trans-title">@(string.IsNullOrEmpty(tx.Comment) ? "Транзакція" : tx.Comment)</div>
                                    <div class="trans-date">@tx.CreatedAt.ToString("dd MMMM")</div>
                                </div>
                                <div class="trans-sum @colorClass">@sign@tx.Amount.ToString("N0")₴</div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="loading-text">Транзакцій поки немає...</p>
                    }
                </div>
            </div>

            <div class="grid-col">
                <div class="header-inline">
                    <h3>Групові бюджети</h3>
                    <span class="group-count">(@groups.Count)</span>
                </div>

                <div class="groups-list">
                    @if (groups != null && groups.Any())
                    {
                        @foreach (var group in groups)
                        {
                            var percentage = group.TotalLimit > 0
                            ? (double)(group.SpentAmount / group.TotalLimit * 100)
                            : 0;
                            var displayPercent = percentage > 100 ? 100 : percentage;
                            string barColor = percentage >= 100 ? "#ff4d4d" : percentage > 80 ? "#ff944d" : "#4ade80";

                            <div class="group-banner-mini">
                                <div class="group-top">
                                    <div class="group-info-main">
                                        <span class="group-title">@group.Name</span>
                                        <span class="group-date">з @group.CreatedAt.ToString("dd.MM.yy")</span>
                                    </div>
                                    <div class="group-avatars">
                                        <div class="av-stack">
                                            <span class="av">U</span>
                                            <span class="av plus">+</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="group-money-row">
                                    <div class="money-item">
                                        <span class="money-label">Ліміт</span>
                                        <span class="money-val">@group.TotalLimit.ToString("N0") ₴</span>
                                    </div>
                                    <div class="money-item text-right">
                                        <span class="money-label">Витрачено</span>
                                        <span class="money-val" style="color: @(percentage >= 100 ? "#ff4d4d" : "#fff")">
                                            @group.SpentAmount.ToString("N0") ₴
                                        </span>
                                    </div>
                                </div>

                                <div class="progress-container">
                                    <div class="progress-track-bg">
                                        <div class="progress-fill-active"
                                             style="width: @displayPercent.ToString("F0", System.Globalization.CultureInfo.InvariantCulture)%; background: @barColor">
                                        </div>
                                    </div>
                                    <div class="progress-label">@percentage.ToString("F1")%</div>
                                </div>

                                <button class="group-mini-btn" @onclick='() => Nav.NavigateTo($"/group/{group.Id}")'>Деталі →</button>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="empty-groups">
                            <p>У вас поки немає груп</p>
                            <button class="btn-create-group">+ Створити групу</button>
                        </div>
                    }
                </div>
            </div>
        </div>
        <CreateWalletModal IsVisible="showCreateModal"
                           OnClose="() => showCreateModal = false"
                           OnSave="HandleCreateWallet" />

        <EditWalletModal IsVisible="showEditModal"
                         Wallet="selectedWalletForEdit"
                         OnClose="() => showEditModal = false"
                         OnSave="HandleUpdateWallet"
                         OnDelete="HandleDeleteWallet" />
    </div>


    <nav class="bottom-nav">
        <div class="nav-item active"><span class="nav-icon">👛</span><span>Баланс</span></div>
        <div class="nav-item"><span class="nav-icon">📈</span><span>Статистика</span></div>
        <div class="nav-item center-btn">
            <button class="plus-btn" @onclick='() => Nav.NavigateTo("/add-transaction/1")'>+</button>
            <span>Додати</span>
        </div>
        <div class="nav-item"><span class="nav-icon">👥</span><span>Групи</span></div>
        <div class="nav-item"><span class="nav-icon">•••</span><span>Більше</span></div>
    </nav>
</div>


@code {
    private decimal totalWalletBalance = 0;
    private decimal incomeSum = 0;
    private decimal expenseSum = 0;

    private List<WalletDto> wallets = new();
    private WalletDto? selectedWallet;
    private WalletDto totalWallet = new WalletDto { Id = Guid.Empty, Name = "Основний" };

    private List<CategoryDto> categories = new();
    private List<TransactionDto> recentTransactions = new();
    private List<GroupDto> groups = new();
    private List<ExchangeRateDto> exchangeRates = new();
    private GroupDto? firstGroup;
    private int filteredTransactionsCount = 0;

    private bool isDropdownOpen = false;
    private bool showCreateModal = false;
    private bool showEditModal = false;
    private WalletDto selectedWalletForEdit = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadDashboardData();
    }

    private async Task LoadDashboardData()
    {
        var summaryData = await FinancialService.GetDashboardSummaryAsync();

        if (summaryData != null)
        {
            wallets = summaryData.Wallets;
            categories = summaryData.Categories;
            groups = summaryData.Groups;
            recentTransactions = summaryData.RecentTransactions;
            exchangeRates = summaryData.ExchangeRates;
            firstGroup = groups.FirstOrDefault();

            if (selectedWallet == null) selectedWallet = totalWallet;

            UpdateDisplayValues(summaryData);
        }
    }

    private void UpdateDisplayValues(DashboardSummaryDto summary)
    {
        if (selectedWallet?.Id == Guid.Empty)
        {
            totalWalletBalance = summary.TotalBalance;
            incomeSum = summary.TotalIncome;
            expenseSum = summary.TotalExpense;
            recentTransactions = summary.RecentTransactions;
            filteredTransactionsCount = summary.RecentTransactions.Count;
        }
        else
        {
            var wallet = wallets.FirstOrDefault(w => w.Id == selectedWallet.Id);
            if (wallet != null)
            {
                totalWalletBalance = wallet.Balance;
                incomeSum = wallet.TotalIncome;
                expenseSum = wallet.TotalExpense;
                recentTransactions = summary.RecentTransactions
                    .Where(t => t.WalletId == wallet.Id || t.TargetWalletId == wallet.Id)
                    .ToList();
                filteredTransactionsCount = recentTransactions.Count;
            }
        }
        StateHasChanged();
    }


    private void ToggleDropdown()
    {
        showCreateModal = false;
        isDropdownOpen = !isDropdownOpen;
    }

    private async Task SelectWallet(WalletDto wallet)
    {
        selectedWallet = wallet;
        isDropdownOpen = false;
        await LoadDashboardData();
    }

    private string GetCurrencySymbol()
    {
        if (selectedWallet?.Id == Guid.Empty) return "₴";

        return selectedWallet?.CurrencyCode switch
        {
            "USD" => "$",
            "EUR" => "€",
            "UAH" => "₴",
            _ => selectedWallet?.CurrencyCode ?? "₴"
        };
    }

    private void OpenCreateModal()
    {
        isDropdownOpen = false;
        showCreateModal = true;
    }

    private void OpenEditModal(WalletDto wallet)
    {
        isDropdownOpen = false;
        selectedWalletForEdit = new WalletDto
        {
            Id = wallet.Id,
            Name = wallet.Name,
            Balance = wallet.Balance,
            CurrencyCode = wallet.CurrencyCode,
            Type = wallet.Type
        };
        showEditModal = true;
    }


    private async Task HandleCreateWallet(WalletCreateRequest request)
    {
        var result = await FinancialService.CreateWalletAsync(request);
        if (result != null)
        {
            showCreateModal = false;
            await LoadDashboardData();
        }
    }

    private async Task HandleUpdateWallet(WalletDto updatedWallet)
    {
        var success = await FinancialService.UpdateWalletAsync(updatedWallet);
        if (success)
        {
            showEditModal = false;
            await LoadDashboardData();
        }
    }

    private async Task HandleDeleteWallet(Guid walletId)
    {
        var confirmed = await FinancialService.DeleteWalletAsync(walletId);
        if (confirmed)
        {
            showEditModal = false;
            if (selectedWallet?.Id == walletId) selectedWallet = totalWallet;
            await LoadDashboardData();
        }
    }
}