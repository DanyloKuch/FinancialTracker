@using FinancialTracker.Web.Models
@using FinancialTracker.Web.Services
@inject FinancialService FinancialService

@if (IsVisible && Group != null)
{
    <div class="edit-group-overlay" @onclick="Close">
        <div class="edit-group-modal" @onclick:stopPropagation>
            <div class="modal-header">
                <h3>Редагувати учасників</h3>
                <span class="cancel-link" @onclick="Close">Скасувати</span>
            </div>

            <div class="modal-body">
                <div class="invite-section">
                    <label>Запросити учасників</label>
                    <span class="mail-icon">✉</span>
                </div>

                <div class="email-input-container">
                    <input type="email"
                           @bind="newEmail"
                           @bind:event="oninput"
                           @onkeypress="HandleKeyPress"
                           placeholder="Введіть email та натисніть Enter" />
                </div>

                <div class="email-tags">
                    @foreach (var participant in editedParticipants)
                    {
                        <div class="email-tag">
                            <span>@participant</span>
                            <span class="remove-tag" @onclick="() => RemoveParticipant(participant)">×</span>
                        </div>
                    }
                </div>


                @if (!string.IsNullOrEmpty(successMessage))
{
    <div class="success-message" style="color: #2ecc71; background: rgba(46, 204, 113, 0.1); padding: 10px; border-radius: 8px; margin-bottom: 15px; font-size: 0.9rem; border: 1px solid #2ecc71; text-align: center;">
        ✅ @successMessage
    </div>
}

                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="error-message" style="color: #ff4444; background: rgba(255, 68, 68, 0.1); padding: 10px; border-radius: 8px; margin-bottom: 15px; font-size: 0.9rem; border: 1px solid #ff4444; text-align: center;">
                        ⚠️ @errorMessage
                    </div>
                }

                <button class="btn-save" @onclick="SaveChanges" disabled="@( !HasChanges )">
                    Зберегти зміни
                </button>

            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public GroupDto? Group { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }
    [Parameter] public EventCallback<List<string>> OnSave { get; set; }

    private string newEmail = "";
    private string? errorMessage;
    private string? successMessage;
    private List<string> editedParticipants = new();
    private HashSet<string> existingMemberEmails = new();
    private HashSet<string> removedMembers = new(StringComparer.OrdinalIgnoreCase);
    private bool HasChanges { get; set; } = false;


    protected override void OnParametersSet()
    {
        if (IsVisible && Group != null)
        {
            errorMessage = null;

            existingMemberEmails = Group.Members
                .Select(m => m.Email)
                .Where(e => !string.IsNullOrWhiteSpace(e))
                .ToHashSet(StringComparer.OrdinalIgnoreCase);

            editedParticipants = existingMemberEmails.ToList();
        }
    }


    private void HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter") AddParticipant();
    }

    private void AddParticipant()
    {
        errorMessage = null;
        if (string.IsNullOrWhiteSpace(newEmail)) return;

        var email = newEmail.Trim();

        if (editedParticipants.Any(p => p.Equals(email, StringComparison.OrdinalIgnoreCase)))
        {
            errorMessage = "Цей email вже доданий до списку нижче.";
            return;
        }

        if (email.Contains("@"))
        {
            editedParticipants.Add(email);
            newEmail = "";
            HasChanges = true;
            StateHasChanged();
        }
        else
        {
            errorMessage = "Будь ласка, введіть коректний email.";
        }
    }

    private void RemoveParticipant(string email)
    {
        errorMessage = null;
        if (existingMemberEmails.Contains(email))
        {
            removedMembers.Add(email);
        }

        editedParticipants = editedParticipants
            .Where(e => !e.Equals(email, StringComparison.OrdinalIgnoreCase))
            .ToList();

        HasChanges = removedMembers.Any() || editedParticipants.Except(existingMemberEmails).Any();

        StateHasChanged();
    }



    private async Task SaveChanges()
    {
        if (!string.IsNullOrWhiteSpace(newEmail)) AddParticipant();
        if (Group == null) return;

        errorMessage = null;
        successMessage = null;
        bool hadError = false;
        int successCount = 0;

        var newEmailsToInvite = editedParticipants
            .Where(e => !existingMemberEmails.Contains(e))
            .ToList();

        foreach (var email in newEmailsToInvite)
        {
            try
            {
                await FinancialService.SendInvitationAsync(new InviteUserRequest
                    {
                        GroupId = Guid.Parse(Group.Id),
                        Email = email
                    });

                successCount++;
                editedParticipants.Remove(email);
            }
            catch (Exception ex)
            {
                hadError = true;
                errorMessage = ex.Message;
                if (ex.Message.Contains("вже") || ex.Message.Contains("запрошення"))
                {
                    editedParticipants.Remove(email);
                }
            }
        }

        if (removedMembers.Any())
        {
            var remainingUserIds = Group.Members
                .Where(m => editedParticipants.Contains(m.Email))
                .Select(m => m.UserId.ToString())
                .ToList();

            await OnSave.InvokeAsync(remainingUserIds);
            removedMembers.Clear();

            if (!hadError) successMessage = "Склад учасників оновлено.";
        }

        if (successCount > 0)
        {
            successMessage = successCount == 1 ? "Запрошення надіслано!" : $"Надіслано запрошень: {successCount}";
        }

        StateHasChanged();
        if (!string.IsNullOrEmpty(successMessage) || hadError)
        {
            HasChanges = false;
            await Task.Delay(3000);

            if (!hadError)
            {
                await OnClose.InvokeAsync();
            }
        }
    }

    private void Close()
    {
        errorMessage = null;
        successMessage = null;
        removedMembers.Clear();
        OnClose.InvokeAsync();
    }
    private void CopyInviteLink() {  }
}